section.atk-wrapper
  .atk-row
    .atk-col-4.sidebar.atk-hide-mobile
      aside.atk-swatch-blue.atk-section-large
        ul.atk-menu-vertical
          {SubMenu}{rows}{row}
          li.atk-menu-separated(class="{$is_active}")
            a.atk-padding.atk-swatch-blue.atk-actions.atk-text-medium(href="{$page}")
              span.atk-cells.atk-cells-gutter
                span.atk-cell
                  span.atk-size-kilo(class="icon-{$icon}")
                span.atk-cell.atk-expand
                  | {$title}
          {/row}
          {/rows}{/SubMenu}
    .atk-col-8.atk-section-large.content
      section.atk-push-large
        h1 {$title}
        hr.hr-short.atk-col-1
        p.atk-size-mega.atk-text-light
         em {$intro}
        {content}md{/}
      {Keywords}
      section.atk-push-large
        h5.atk-text-bold.text-blue.atk-push Keywords &amp; Deliverables
        .atk-size-micro.tag-cloud
          {rows}{row}
          span.atk-label.atk-swatch-lightGray.atk-padding-small.atk-section-xsmall {name}interviews with business representatives{/}
          {/row}
          span.atk-label.atk-swatch-lightGray.atk-padding-small.atk-section-xsmall interviews with IT-personnel
          span.atk-label.atk-swatch-lightGray.atk-padding-small.atk-section-xsmall prototype/demo
          span.atk-label.atk-swatch-lightGray.atk-padding-small.atk-section-xsmall technical architecture
          span.atk-label.atk-swatch-lightGray.atk-padding-small.atk-section-xsmall requirements specifications
          span.atk-label.atk-swatch-lightGray.atk-padding-small.atk-section-xsmall project plan (aligned with priorities)
          {/rows}
      {/}
      {$ActionInner}

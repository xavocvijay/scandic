section.atk-section-xlarge
  .atk-wrapper.atk-align-center
    h1 {$title}
    hr.hr-short.atk-col-1.atk-move-center
    p.atk-size-mega.atk-text-light
      | {$content}
hr.atk-hr-reset
section.atk-section-xlarge.technology-stack
  .atk-wrapper
    .atk-row
      {Left}
      .atk-clear-fix
      {rows}{row}
      .atk-col-6(class="atk-move-{$block_position}")
        .atk-box.atk-swatch-blue(class="{$class}")
          h4 {$name}
          p {$content}
          ul.atk-size-micro {$bullets}
          .atk-push 
          div(class="atk-align-{$image_position}")
            img(src="{$image}"  style="width:50%" onload="resizeUpdate()")
          .point.point-top.atk-shape-circle
          {bottom_connector}
          .point.point-bottom.atk-shape-circle
          {/}
          .connection.connection-bottom
      {/}
      {Right}
      .atk-clear-fix
      {rows}{row}
      .atk-col-6(class="atk-move-{$block_position}")
        .atk-box.atk-swatch-blue(class="{$class}")

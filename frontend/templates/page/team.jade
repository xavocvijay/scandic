section.atk-section-xlarge
  .atk-wrapper.atk-align-center
    h1 {$title}
    hr.hr-short.atk-col-1.atk-move-center
    p.atk-size-mega.atk-text-light
      | {$content}
section.atk-wrapper.atk-push-xlarge
  .atk-row.atk-grid.atk-grid-gutter-xsmall.team-members(ontouchstart="")
    {Team}{rows}{row}
    figure.atk-col-2.team-member
      .photo(style="background-image:url({$photo})")
      figcaption.atk-swatch-blue.atk-cells
        .atk-cell.atk-valign-bottom
          .atk-text-bold.atk-push-xsmall
            | {$name_en}
          | {$position_en}
    {/}{/}{/}
    {has_block}
    div(class="atk-col-{$width} atk-cells")
      .atk-cell.team-member-join.atk-align-center.atk-swatch-blue
        h3.atk-text-medium
          a.atk-cells.atk-cells-gutter-xsmall.atk-move-center(href="{$url}")
            .atk-cell {$title}
            .atk-cell
              span.icon-arrow-east.atk-size-nano.atk-block
        p.atk-text-dimmed {$subtitle}
    {/}
hr.atk-hr-reset
{$ActionsWithIcons}
